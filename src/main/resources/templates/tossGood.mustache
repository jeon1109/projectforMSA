<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <title>결제하기</title>
    <!-- 토스페이먼츠 결제창 SDK 추가 -->
    <script src="https://js.tosspayments.com/v1/payment"></script>
</head>
<body>
<section>
    <!--  충전하기 버튼 만들기  -->
    <span>총 포인트 충전 금액 :</span>
    <span>58500원</span>
    <button id="payment-button">58500원 충전하기</button>
</section>
<script>
    // ------ 클라이언트 키로 객체 초기화 ------
    const clientKey = 'test_ck_0RnYX2w532z0q6ey7qlk3NeyqApQ';
    const tossPayments = TossPayments(clientKey);
    const orderId = crypto.randomUUID(); // 매 클릭마다 새로 생성(중복 방지)
    // ------ 충전하기 버튼에 기능 추가 ------
    var button = document.getElementById('payment-button') // 충전하기 버튼

    button.addEventListener('click', function () {
        // ------ 결제창 띄우기 ------
        tossPayments.requestPayment('CARD', {
            amount: { value: 58500, currency: 'KRW' },
            orderId: orderId,
            orderName: '포인트 충전',
            customerName: '첫번째',
            customerEmail: 'test1@gmail.com',
            successUrl: 'http://localhost:8090/v1/toss/success',
            failUrl: 'http://localhost:8090/v1/toss/fail'
        }).catch(function (err) {
            // 원인 바로 확인
            console.error(err);
            alert(`[결제 오류] ${err.code || ''} ${err.message || err}`);
        });
    })
</script>
</body>
</html>