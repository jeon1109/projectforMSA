<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Country & City Add</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pretendard:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        :root{
            --bg:#0f172a;            /* slate-900 */
            --card:#0b1224;          /* deep card */
            --muted:#94a3b8;         /* slate-400 */
            --text:#e5e7eb;          /* gray-200 */
            --primary:#2663ff;
            --primary-2:#1b4ee1;
            --ring:rgba(38,99,255,.35);
            --border:rgba(255,255,255,.08);
            --shadow: 0 10px 25px rgba(0,0,0,.35);
            --radius:16px;
            --radius-sm:12px;
        }
        *{box-sizing:border-box}
        html,body{height:100%}
        body{
            margin:0;
            font-family:"Pretendard", system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Apple SD Gothic Neo", "Noto Sans KR", sans-serif;
            background:
                    radial-gradient(1200px 600px at 10% -10%, rgba(37,99,235,.25), transparent 60%),
                    radial-gradient(1000px 500px at 110% 20%, rgba(147,51,234,.20), transparent 60%),
                    radial-gradient(800px 400px at 50% 110%, rgba(16,185,129,.18), transparent 60%),
                    var(--bg);
            color:var(--text);
            line-height:1.5;
            -webkit-font-smoothing:antialiased;
            -moz-osx-font-smoothing:grayscale;
            display:flex;
            align-items:center;
            justify-content:center;
            padding:32px;
        }
        .wrap{
            width:100%;
            max-width:780px;
            display:grid;
            gap:22px;
        }
        .header{
            text-align:center;
            padding-bottom:6px;
        }
        .title{
            margin:0;
            font-size:clamp(24px, 2.4vw, 32px);
            font-weight:700;
            letter-spacing:.3px;
        }
        .subtitle{
            margin:6px 0 0;
            color:var(--muted);
            font-size:14px;
        }

        .card{
            background:linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,.02)) , var(--card);
            border:1px solid var(--border);
            border-radius:var(--radius);
            padding:22px clamp(18px, 3.5vw, 26px);
            box-shadow:var(--shadow);
            backdrop-filter: blur(6px);
        }

        .section-title{
            margin:0 0 14px;
            font-size:clamp(18px, 1.8vw, 22px);
            font-weight:700;
        }

        .form{
            display:flex;
            flex-wrap:wrap;
            gap:12px;
            align-items:center;
        }

        .field{
            position:relative;
            flex:1 1 240px;
            min-width:200px;
        }
        label{
            display:block;
            font-size:12px;
            color:var(--muted);
            margin:0 0 6px 2px;
            user-select:none;
        }
        input[type="text"]{
            width:100%;
            padding:12px 14px;
            border-radius:var(--radius-sm);
            border:1px solid var(--border);
            background:rgba(255,255,255,.03);
            color:var(--text);
            outline:none;
            transition:border-color .15s ease, box-shadow .15s ease, background .15s ease;
        }
        input::placeholder{ color:#9aa6b2; }
        input:focus{
            border-color:var(--primary);
            box-shadow:0 0 0 6px var(--ring);
            background:rgba(255,255,255,.05);
        }

        .btn{
            appearance:none;
            border:0;
            padding:12px 18px;
            border-radius:14px;
            background:linear-gradient(180deg, var(--primary), var(--primary-2));
            color:white;
            font-weight:700;
            letter-spacing:.2px;
            cursor:pointer;
            transition: transform .06s ease, filter .2s ease, box-shadow .2s ease;
            box-shadow: 0 8px 24px rgba(38,99,255,.35);
            white-space:nowrap;
        }
        .btn:hover{ filter:saturate(1.15) brightness(1.03); }
        .btn:active{ transform:translateY(1px) scale(.995); }

        .hr{
            height:1px; width:100%;
            background:linear-gradient(90deg, transparent, var(--border), transparent);
            margin:2px 0;
        }

        /* compact on very small screens */
        @media (max-width:420px){
            .btn{ width:100%; }
            .field{ min-width:unset; flex-basis:100%; }
        }
    </style>
</head>
<body>
<main class="wrap">
    <header class="header">
        <h1 class="title">World Registry</h1>
        <p class="subtitle">국가와 도시를 간단히 추가할 수 있는 미니 폼</p>
    </header>

    <!-- Country -->
    <section class="card">
        <h2 class="section-title">Country Add</h2>
        <form class="form" action="/create/country" method="get">
            <div class="field">
                <label for="country">Country</label>
                <input id="country" name="country" type="text" placeholder="e.g. Korea, Japan, Canada" required>
            </div>
            <button class="btn" type="submit">Add</button>
        </form>
    </section>

    <div class="hr"></div>

    <!-- City -->
    <section class="card">
        <h2 class="section-title">City Add</h2>
        <form class="form" action="/create/city" method="get">
            <div class="field">
                <label for="country2">Country</label>
                <input id="country2" name="country" type="text" placeholder="e.g. Korea" required>
            </div>
            <div class="field">
                <label for="city">City</label>
                <input id="city" name="city" type="text" placeholder="e.g. Seoul" required>
            </div>
            <button class="btn" type="submit">Add</button>
        </form>
    </section>
</main>
</body>
</html>
